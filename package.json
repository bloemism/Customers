{
  "name": "87app-customer",
  "private": true,
  "version": "1.0.0",
  "description": "花屋向け顧客アプリ - 店舗検索、QR決済、ポイント管理",
  "type": "module",
  "keywords": [
    "flower-shop",
    "customer-app",
    "qr-payment",
    "react",
    "typescript",
    "supabase"
  ],
  "author": "87app Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "dev:local": "node server-local.js",
    "dev:full": "concurrently \"npm run dev:local\" \"npm run dev\"",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "build:analyze": "vite build --mode production && npx vite-bundle-analyzer dist",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 50",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "deploy": "npm run clean && npm run build:prod",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:full": "./scripts/deploy.sh vercel",
    "deploy:build": "./scripts/deploy.sh",
    "postinstall": "npm run type-check",
    "prebuild": "npm run type-check",
    "postbuild": "echo 'Build completed successfully'"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.16.10",
    "@stripe/stripe-js": "^7.7.0",
    "@supabase/supabase-js": "^2.38.4",
    "@types/qrcode": "^1.5.5",
    "@zxing/library": "^0.21.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "html5-qrcode": "^2.3.8",
    "jsqr": "^1.4.0",
    "lucide-react": "^0.344.0",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-qr-scanner": "^1.0.0-alpha.11",
    "react-router-dom": "^6.23.0",
    "stripe": "^17.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
